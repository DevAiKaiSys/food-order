		{
			"name": "Search Orders",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response contains 'content' field\", function () {",
							"    pm.expect(pm.response.json()).to.have.property('content');",
							"});",
							"",
							"pm.test(\"'content' is an array\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.content).to.be.an('array');",
							"});",
							"",
							"pm.test(\"First order has expected fields\", function () {",
							"    var jsonData = pm.response.json();",
							"    if (jsonData.content.length > 0) {",
							"        pm.expect(jsonData.content[0]).to.have.property('id');",
							"        pm.expect(jsonData.content[0]).to.have.property('customer_name');",
							"        pm.expect(jsonData.content[0]).to.have.property('total_amount');",
							"    }",
							"});"
						],
						"type": "text/javascript"
					}
				}
